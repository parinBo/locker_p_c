    <div>
        <button class="btn btn-outline-danger" id="btn" type="submit">Book now</button>
    </div>
</form>

<script>
    if ("@ViewBag.show" ==="true") {
        alert("@ViewBag.msg")
    }
    if("@ViewBag.notReservation"==="true"){
        document.getElementById("btn").disabled = true;
    }
    function preventBack() { window.history.forward(); }
    setTimeout("preventBack()", 0);
